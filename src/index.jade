doctype html
html(lang="en-US", ng-app="nss-attendance-app")
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title NSS Attendance Tracker
		link(rel="stylesheet" href="lib/build.css")
		link(rel="stylesheet" href="assets/main.css")
	body
		.container
			nav
				ul
					li: a(href="/#/") Go to App
					li(ng-hide="auth"): a(href="/#/login") TA Login
					li(ng-hide="auth"): a(href="/#/logout") Logout

			.app(ng-view)

		script(src="assets/static/static.config.js")
